<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:local="using:U5BFA.ShellFlyout">

	<Style BasedOn="{StaticResource DefaultShellFlyoutStyle}" TargetType="local:ShellFlyout" />

	<Style x:Key="DefaultShellFlyoutStyle" TargetType="local:ShellFlyout">
		<Setter Property="Width" Value="384" />
		<Setter Property="Height" Value="736" />
		<Setter Property="AutomationProperties.LandmarkType" Value="Navigation" />
		<Setter Property="IsTabStop" Value="False" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:ShellFlyout">
					<Grid
						x:Name="RootGrid"
						Margin="12"
						Background="Black"
						BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
						BorderThickness="1"
						CornerRadius="{StaticResource OverlayCornerRadius}"
						RenderTransformOrigin="0.5,0.5"
						Translation="0,0,32">
						<Grid.RenderTransform>
							<TranslateTransform Y="1000" />
						</Grid.RenderTransform>
						<Grid.Shadow>
							<ThemeShadow />
						</Grid.Shadow>

						<Grid x:Name="SystemBackdropTargetGrid" CornerRadius="{StaticResource OverlayCornerRadius}" />

						<Grid>
							<Button
								x:Name="HelloButton"
								HorizontalAlignment="Center"
								VerticalAlignment="Center"
								Content="Hello!" />
						</Grid>

						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="PopupStates">
								<VisualState x:Name="Collapsed">
									<Storyboard x:Name="Windows11HideContentStoryboard">
										<DoubleAnimationUsingKeyFrames
											x:Name="Windows11HideContentAnimation"
											EnableDependentAnimation="True"
											Storyboard.TargetName="RootGrid"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
											<DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0" />
											<SplineDoubleKeyFrame
												KeySpline="0.2,0.0 0.9,0.0"
												KeyTime="0:0:0.167"
												Value="736" />
										</DoubleAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Visible">
									<Storyboard x:Name="Windows11ShowContentStoryboard">
										<DoubleAnimationUsingKeyFrames
											x:Name="Windows11ShowContentAnimation"
											EnableDependentAnimation="True"
											Storyboard.TargetName="RootGrid"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
											<DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="736" />
											<SplineDoubleKeyFrame
												KeySpline="0.1,0.9 0.4,1.0"
												KeyTime="0:0:0.167"
												Value="0" />
										</DoubleAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>

