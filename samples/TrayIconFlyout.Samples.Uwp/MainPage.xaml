<Page
	x:Class="U5BFA.TrayIconFlyout.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:U5BFA.TrayIconFlyout"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
	Loaded="Page_Loaded"
	mc:Ignorable="d">

	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary x:Key="Light">
					<AcrylicBrush
						x:Key="FlyoutAcrylicBrush"
						FallbackColor="#FFEEEEEE"
						TintColor="#FFF3F3F3"
						TintLuminosityOpacity="0.9"
						TintOpacity="0" />
				</ResourceDictionary>
				<ResourceDictionary x:Key="Dark">
					<AcrylicBrush
						x:Key="FlyoutAcrylicBrush"
						FallbackColor="#FF1C1C1C"
						TintColor="#FF202020"
						TintLuminosityOpacity="0.96"
						TintOpacity="0.5" />
				</ResourceDictionary>
				<ResourceDictionary x:Key="HighContrast">
					<SolidColorBrush x:Key="FlyoutAcrylicBrush" Color="{ThemeResource SystemColorWindowColor}" />
				</ResourceDictionary>
			</ResourceDictionary.ThemeDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<Grid x:Name="WindowGrid" RenderTransformOrigin="0.5,0.5">
		<Grid.RenderTransform>
			<TranslateTransform Y="1000" />
		</Grid.RenderTransform>

		<Grid
			x:Name="ContentGrid"
			Background="{ThemeResource FlyoutAcrylicBrush}"
			CornerRadius="8"
			Translation="0,0,32">
			<Grid.Shadow>
				<ThemeShadow x:Name="WindowShadow" />
			</Grid.Shadow>

			<Button
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Content="Hellow" />
		</Grid>

		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup x:Name="PopupStates">
				<VisualState x:Name="Hidden">
					<Storyboard x:Name="Windows11HideContentStoryboard">
						<DoubleAnimationUsingKeyFrames
							x:Name="Windows11HideContentAnimation"
							EnableDependentAnimation="True"
							Storyboard.TargetName="WindowGrid"
							Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
							<DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0" />
							<SplineDoubleKeyFrame
								KeySpline="0.2,0.0 0.9,0.0"
								KeyTime="0:0:0.167"
								Value="712" />
						</DoubleAnimationUsingKeyFrames>
					</Storyboard>
				</VisualState>
				<VisualState x:Name="Visible">
					<Storyboard x:Name="Windows11ShowContentStoryboard">
						<DoubleAnimationUsingKeyFrames
							x:Name="Windows11ShowContentAnimation"
							EnableDependentAnimation="True"
							Storyboard.TargetName="WindowGrid"
							Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
							<DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="712" />
							<SplineDoubleKeyFrame
								KeySpline="0.1,0.9 0.4,1.0"
								KeyTime="0:0:0.167"
								Value="0" />
						</DoubleAnimationUsingKeyFrames>
					</Storyboard>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</Grid>
</Page>
