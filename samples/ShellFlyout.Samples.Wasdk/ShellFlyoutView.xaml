<UserControl
	x:Class="U5BFA.ShellFlyout.ShellFlyoutView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="360"
	Height="736"
	mc:Ignorable="d">

	<StackPanel
		Padding="24"
		VerticalAlignment="Bottom"
		Spacing="24">
		<Button
			x:Name="IncreaseSizeButton"
			Click="IncreaseSizeButton_Click"
			Content="Increase size by 20px" />
		<Button
			x:Name="DecreaseSizeButton"
			Click="DecreaseSizeButton_Click"
			Content="Decrease size by 20px" />
		<ToggleSwitch
			x:Name="OrientationToggleSwitch"
			Header="Orientation:"
			OffContent="Vertical"
			OnContent="Horizontal"
			Toggled="OrientationToggleSwitch_Toggled" />
	</StackPanel>

</UserControl>
